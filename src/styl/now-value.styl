@import '_variables'

.dollert-now-value-container
  padding-bottom 15px
  font-size 12px
  text-align center
  line-height 20px
  background $color-white
  border-bottom 1px solid $color-grey

  span
    vertical-align middle
    margin 0 3px

.dollar-now-value-label
  text-transform uppercase
.dollar-now-value
  font-size 16px;
  color $color-primary
.dollar-now-variation
  &.is-positive
    color $color-green
  &.is-negative
    color $color-red

